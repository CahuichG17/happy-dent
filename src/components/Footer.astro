<style>
  .footer {
    background: var(--text-dark);
    padding: 4rem 0 0;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 1.25rem;
  }

  .footer-logo-icon {
    height: 44px;
    width: auto;
    filter: brightness(1.15);
  }

  .footer-name {
    display: block;
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--pink);
    line-height: 1.1;
  }

  .footer-tagline {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.6rem;
    font-weight: 600;
    letter-spacing: 0.25em;
    color: var(--lavender);
    margin-top: 2px;
    display: block;
  }

  .footer-desc {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.5);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    max-width: 300px;
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
  }

  .footer-social a {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.06);
    border-radius: var(--radius-sm);
    color: rgba(255,255,255,0.5);
    transition: all var(--transition-base);
  }

  .footer-social a:hover {
    background: var(--gradient-primary);
    color: var(--white);
    transform: translateY(-3px);
  }

  .footer-links-group h4 {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 1.25rem;
  }

  .footer-links-group ul {
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
  }

  .footer-links-group li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.4);
  }

  .footer-links-group li svg {
    flex-shrink: 0;
  }

  .footer-links-group a {
    font-size: 0.9rem;
    color: rgba(255,255,255,0.45);
    transition: all var(--transition-fast);
  }

  .footer-links-group a:hover {
    color: var(--pink);
    padding-left: 4px;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
  }

  .footer-bottom p {
    font-size: 0.85rem;
    color: rgba(255,255,255,0.3);
  }

  .footer-love {
    font-size: 0.85rem;
    color: rgba(255,255,255,0.3);
  }

  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
