---
const services = [
  {
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="24" cy="24" r="20" stroke="currentColor" stroke-width="2"/><path d="M24 14v20M14 24h20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>`,
    title: "Odontología General",
    description: "Revisiones completas, limpiezas dentales profesionales y cuidado preventivo para mantener tu salud bucal en óptimas condiciones.",
    features: ["Limpieza dental", "Diagnóstico completo", "Prevención"]
  },
  {
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M24 6l4 12h12l-10 7 4 13-10-8-10 8 4-13-10-7h12z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/></svg>`,
    title: "Estética Dental",
    description: "Blanqueamiento profesional, carillas dentales y diseño de sonrisa para que luzcas una sonrisa deslumbrante y natural.",
    features: ["Blanqueamiento", "Carillas", "Diseño de sonrisa"]
  },
  {
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="8" y="12" width="32" height="24" rx="4" stroke="currentColor" stroke-width="2"/><path d="M16 20v8M24 18v12M32 22v6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>`,
    title: "Ortodoncia",
    description: "Tratamientos con brackets metálicos, estéticos e invisalign para alinear tus dientes y mejorar tu mordida.",
    features: ["Brackets", "Invisalign", "Retenedores"]
  },
  {
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="24" cy="24" r="8" stroke="currentColor" stroke-width="2"/><path d="M24 8v6M24 34v6M8 24h6M34 24h6M13 13l4.2 4.2M30.8 30.8l4.2 4.2M13 35l4.2-4.2M30.8 17.2L35 13" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>`,
    title: "Implantes Dentales",
    description: "Implantes de titanio de última generación para reemplazar dientes perdidos con resultados permanentes y naturales.",
    features: ["Implantes", "Prótesis fijas", "Rehabilitación"]
  },
  {
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M24 10C18 10 14 16 14 22s6 14 10 18c4-4 10-12 10-18s-4-12-10-12z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
    title: "Endodoncia",
    description: "Tratamientos de conducto con tecnología avanzada para salvar dientes dañados y eliminar el dolor de forma efectiva.",
    features: ["Tratamiento de conducto", "Sin dolor", "Tecnología avanzada"]
  },
  {
    icon: `<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M24 8c-4 0-8 4-8 8s4 10 8 16c4-6 8-12 8-16s-4-8-8-8z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/><path d="M16 26c-2-2-5 0-3 6s9 10 11 10 11-4 11-10-1-8-3-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>`,
    title: "Odontopediatría",
    description: "Cuidado dental especializado para los más pequeños del hogar, en un ambiente divertido y libre de miedos.",
    features: ["Niños y bebés", "Prevención infantil", "Selladores"]
  },
];
---

<section class="services" id="servicios">
  <div class="container">
    <div class="services-header">
      <span class="section-tag">Nuestros Servicios</span>
      <h2 class="section-title">Tratamientos de<br/>excelencia dental</h2>
      <p class="section-subtitle">
        Contamos con tecnología de punta y un equipo de especialistas comprometidos 
        con tu bienestar y la salud de tu sonrisa.
      </p>
    </div>

    <div class="services-grid">
      {services.map((service, index) => (
        <div class="service-card" data-animate="fade-up" data-delay={index * 0.1}>
          <div class="service-card-inner">
            <div class="service-icon" set:html={service.icon} />
            <h3 class="service-title">{service.title}</h3>
            <p class="service-description">{service.description}</p>
            <ul class="service-features">
              {service.features.map(feature => (
                <li>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                  {feature}
                </li>
              ))}
            </ul>
            <a href="https://wa.me/521234567890?text=Hola%20Happy%20Dent%2C%20me%20interesa%20el%20servicio%20de%20{encodeURIComponent(service.title)}" target="_blank" rel="noopener" class="service-cta">
              Más información
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </a>
          </div>
          <div class="service-card-glow"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: var(--section-padding) 0;
    background: var(--white);
    position: relative;
    overflow: hidden;
  }

  .services::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--pink-light), var(--lavender-light), transparent);
  }

  .services-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .services-header .section-subtitle {
    margin-inline: auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
  }

  .service-card {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .service-card:hover {
    transform: translateY(-8px);
  }

  .service-card-inner {
    position: relative;
    z-index: 2;
    padding: 2.5rem;
    background: var(--gradient-card);
    border: 1px solid rgba(255, 177, 215, 0.12);
    border-radius: var(--radius-xl);
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
  }

  .service-card:hover .service-card-inner {
    border-color: rgba(255, 177, 215, 0.3);
    box-shadow: var(--shadow-lg);
  }

  .service-card-glow {
    position: absolute;
    inset: -1px;
    border-radius: var(--radius-xl);
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition-base);
    z-index: 1;
  }

  .service-card:hover .service-card-glow {
    opacity: 0.08;
  }

  .service-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(255, 177, 215, 0.12), rgba(216, 185, 235, 0.12));
    border-radius: var(--radius-md);
    margin-bottom: 1.5rem;
    color: var(--pink-dark);
    transition: all var(--transition-base);
  }

  .service-icon :global(svg) {
    width: 28px;
    height: 28px;
  }

  .service-card:hover .service-icon {
    background: var(--gradient-primary);
    color: var(--white);
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(255, 177, 215, 0.3);
  }

  .service-title {
    font-size: 1.35rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--text-dark);
  }

  .service-description {
    font-size: 0.95rem;
    color: var(--text-light);
    line-height: 1.7;
    margin-bottom: 1.25rem;
    flex-grow: 1;
  }

  .service-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .service-features li {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.82rem;
    font-weight: 500;
    color: var(--text-medium);
    background: rgba(255, 177, 215, 0.08);
    padding: 0.35rem 0.85rem;
    border-radius: var(--radius-full);
  }

  .service-features li svg {
    color: var(--pink);
    flex-shrink: 0;
  }

  .service-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--pink-dark);
    padding-top: 0.5rem;
    border-top: 1px solid rgba(255, 177, 215, 0.12);
    transition: all var(--transition-fast);
  }

  .service-cta:hover {
    gap: 0.85rem;
    color: var(--pink-medium);
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
